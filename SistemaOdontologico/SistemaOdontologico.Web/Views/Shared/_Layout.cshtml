<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema Odontológico</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top barra-nav">
        <div class="container">
            <div class="col-md-offset-1 navbar-header">
                <button type="button" class="navbar-toggle barra-nav" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">
                    <figure class="nav-logo">
                        <img src="@Url.Content("~/fonts/logo.png")" style="width:34px;">
                    </figure>
                </a>
            </div>
            <dviv class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Pacientes", "Index", "Pacientes", "Home", htmlAttributes: new { @class = "navbar-words" })</li>
                    <li>@Html.ActionLink("Clínicas", "Index", "Clinicas", "Home", htmlAttributes: new { @class = "navbar-words" })</li>
                    <li>@Html.ActionLink("Anexar Radiografia", "Create", "Radiografias", "Home", htmlAttributes: new { @class = "navbar-words" })</li>
                    <li><a class="navbar-words" href="#"> Marcar Consulta</a></li>
                    <li><a class="navbar-words" href="#">Agenda</a></li>

                </ul>
            </dviv>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap-datepicker")
    @RenderSection("scripts", required: false)
</body>
</html>
